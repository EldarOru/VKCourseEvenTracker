<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        style="@style/Theme.EvenTracker.DetailedEventHeader"
        android:gravity="center"
        android:id="@+id/detailed_name_eventTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="Событие"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:theme="@style/Theme.EvenTracker.EventCard"
        app:layout_constraintTop_toBottomOf="@+id/detailed_name_eventTV"
        android:id="@+id/DateTimeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginBottom="8dp">
        <ImageView
            android:id="@+id/icon_date"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_calendar_month_24"/>
        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/detailed_date_eventTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Дата"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/icon_date"
            app:layout_constraintBottom_toBottomOf="parent">
        </TextView>
        <ImageView
            android:id="@+id/icon_time"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/detailed_time_eventTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_access_time_24"
            android:layout_marginRight="8dp"/>
        <TextView
            android:id="@+id/detailed_time_eventTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Время"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/location_address"
        app:layout_constraintTop_toBottomOf="@+id/DateTimeLayout">
        <TextView
            android:id="@+id/detailed_description_eventTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            tools:text="Событие">
        </TextView>
    </ScrollView>
    <TextView
        android:padding="16dp"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/location_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/detailed_map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scroll_view"/>
    <fragment
        android:layout_margin="16dp"
        android:id="@+id/detailed_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/location_address"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>