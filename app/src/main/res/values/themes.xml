<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EvenTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainMedium</item>
        <item name="colorPrimaryVariant">@color/mainDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mainDark</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/mainLight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/mainMedium</item>
    </style>
    <!-- Event card style. -->
    <style name="Theme.EvenTracker.EventCard" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/mainMedium</item>
        <item name="android:backgroundTint">@color/mainMedium</item>
        <item name="android:textColor">@color/mainLight</item>
    </style>
    <!-- Bottom navigation style. -->
    <style name="Theme.EvenTracker.BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="colorSurface">@color/mainLight</item>
        <!-- Color of inactive icons. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSurface">@color/mainMedium</item>
        <item name="colorPrimary">@color/mainMedium</item>
    </style>
    <!-- Text input style. -->
    <style name="Theme.EvenTracker.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/mainMediumHighlighted</item>
        <item name="android:textColorHint">@color/mainMediumHighlighted</item>
    </style>
    <!-- Floating button style. -->
    <style name="Theme.EvenTracker.FloatingButton" parent="Widget.Design.FloatingActionButton">
        <item name="colorSecondary">@color/mainContrast</item>
        <item name="colorOnSecondary">@color/mainLight</item>
        <item name="android:src">@drawable/ic_baseline_add_24</item>
    </style>
    <!-- Bottom style. -->
    <style name="Theme.EvenTracker.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/mainLight</item>
    </style>
    <!-- Bottom button style. -->
    <style name="Theme.EvenTracker.BottomButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/mainContrast</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
    </style>
    <!-- Date and time button style. -->
    <style name="Theme.EvenTracker.ButtonDate" parent="">
        <item name="android:background">@drawable/create_new_event_date_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">1dp</item>
    </style>
    <!-- Detailed event header style. -->
    <style name="Theme.EvenTracker.DetailedEventHeader" parent="">
        <item name="android:background">@color/mainMedium</item>
        <item name="android:textColor">@color/mainLight</item>
    </style>
    <!-- Some colors -->
    <color name="mtrl_textinput_default_box_stroke_color" tools:override="true">@color/mainMedium</color>
</resources>